pipeline {
    agent any

    stages {
        stage('Get Code') {
            steps {
                git url: 'https://github.com/albertmenendezg/UNIR-CP1.D', branch: 'develop'
            }
        }

        stage('Static Test') {
            steps {
                script {
                    sh 'mkdir -p reports'
                    sh '''
                        flake8 src --format=html --htmldir=reports/flake8 || true
                    '''
                    sh '''
                        bandit -r src -f json -o reports/bandit.json || true
                    '''
                }

                archiveArtifacts artifacts: 'reports/**', allowEmptyArchive: true
            }
        }
    }
}